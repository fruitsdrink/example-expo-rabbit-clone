{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/assets/*": ["./assets/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    ".expo/types/**/*.ts",
    "./expo-env.d.ts",
    "./types.d.ts",
    "expo-env.d.ts"
  ]
}
